generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  username  String  @id
  password  String
  firstName String?
  lastName  String?

  Tasks         Task[]
  AttachedTasks UserAttachedTasks[]
}

model UserAttachedTasks {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Task          Task     @relation(fields: [taskCreator, taskCreatedAt], references: [creator, createdAt])
  taskCreator   String
  taskCreatedAt DateTime
  User          User     @relation(fields: [userUsername], references: [username])
  userUsername  String

  @@id([taskCreator, taskCreatedAt, userUsername])
}

model Task {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String
  description String?
  startDate   DateTime? @db.Date
  startTime   DateTime? @db.Time()
  endDate     DateTime? @db.Date
  endTime     DateTime? @db.Time()
  done        Boolean   @default(false)

  Creator       User                @relation(fields: [creator], references: [username])
  creator       String
  AttachedUsers UserAttachedTasks[]

  @@id([creator, createdAt])
}
