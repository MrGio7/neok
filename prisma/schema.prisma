generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String
  description String?
  start       DateTime?
  end         DateTime?
  done        Boolean   @default(false)
  User        User      @relation(fields: [username], references: [username])
  username    String

  @@id([username, createdAt])
}

model User {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  username  String  @id
  password  String
  firstName String?
  lastName  String?

  tasks Task[]
}
